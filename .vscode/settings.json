{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "node_modules": true,
    "venv": true,
    "*.sublime-*": true,
    "env*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/env": true,
    "**/venv": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/env/**": true,
    "**/venv/**": true,
    "env-*": true
  },
  "stylelint.enable": false,
  "css.validate": false,
  "scss.validate": false,
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.options": {
    "configFile": ".eslintrc"
  },
  "markdownlint.ignore": ["node_modules", "build"],
  "markdownlint.run": "onSave",
  "workbench.colorCustomizations": {
    "tab.unfocusedActiveBorder": "#fff0",
    "tab.hoverBorder": "#00ffff",
    "tab.inactiveModifiedBorder": "#ccc",
    "tab.activeModifiedBorder": "#ff0000"
  },
  "window.title": "${separator} ${rootName} : ${activeFolderShort}${separator}${activeEditorShort}",
  "workbench.editor.highlightModifiedTabs": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.format": true
  },
  "editor.organizeImports": true,
  "editor.letterSpacing": 0.2,
  "editor.lineHeight": 20,
  "editor.renderWhitespace": "none",
  "editor.fontFamily": "Fira Code Retina",
  "editor.fontLigatures": true,
  "terminal.integrated.shell.osx": "/bin/zsh"
}
